{
  "private": true,
  "name": "graphcms-docs-starter",
  "description": "Docs Starter built with Remix and powered by GraphCMS",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -o ./app/tailwind.css",
    "dev": "node -r dotenv/config node_modules/.bin/concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "generate": "graphql-codegen -r dotenv/config --config codegen.yml",
    "format": "prettier --ignore-path .gitignore --write . --no-error-on-unmatched-pattern"
  },
  "dependencies": {
    "@graphcms/rich-text-react-renderer": "^0.4.2",
    "@graphcms/rich-text-types": "^0.3.1",
    "@headlessui/react": "^1.4.3",
    "@heroicons/react": "^1.0.5",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@remix-run/vercel": "^1.1.3",
    "classcat": "^5.0.3",
    "graphql": "^15.8.0",
    "graphql-request": "3.7.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "remix-utils": "^2.5.0",
    "url-join": "^4.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.4.0",
    "@graphql-codegen/fragment-matcher": "^3.2.1",
    "@graphql-codegen/typescript": "2.4.2",
    "@graphql-codegen/typescript-graphql-request": "4.3.3",
    "@graphql-codegen/typescript-operations": "2.2.2",
    "@remix-run/dev": "^1.1.3",
    "@tailwindcss/typography": "0.5.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/url-join": "^4.0.1",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "dotenv": "^14.3.2",
    "postcss": "^8.4.5",
    "prettier": "2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "tailwindcss": "^3.0.17",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
